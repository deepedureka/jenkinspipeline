pipeline{
	agent any
	stages{
		stage('Build'){
			steps('Build'){
				sh 'mvn clean package'				
			}
			post{
				success{
					echo "Now archiving the package ...."
					archiveArtifacts artifacts: '**/target/*war'
				}			
			}
			steps('Deploy'){
				steps{

				build job: 'DeployPackage1'

				}
			}
		}
	}
}
